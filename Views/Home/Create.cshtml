@model WaffleWebWorksTpFinal.Models.CarreraIma

@{
    ViewData["Title"] = "Crear carrera";
}

<h1 class="">Create</h1>

<h4 class="text-lg-center display-4">Carrera</h4>
<hr />
<div class="row container">
    <div class="col-md-4 container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagen" class="control-label"></label>
                <input asp-for="Imagen" class="form-control" />
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>
           
            <br>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary btn-success" />
            </div>
        </form>
    </div>
</div>

<div  class="row container">
    <a asp-action="Index" class="container"><input type="submit" value="Volver atras" class="btn btn-primary btn-info  " /></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}